# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.ApplicationController.home
GET     /about                      controllers.ApplicationController.about
GET     /login                      controllers.ApplicationController.login
POST    /login                      controllers.ApplicationController.login
GET     /logout                     controllers.ApplicationController.logout
GET     /NewContact                 controllers.ApplicationController.newContact
POST    /NewContact                 controllers.ApplicationController.postContact
GET     /users                      controllers.ApplicationController.listUsers
GET     /profile                    controllers.ApplicationController.profile
GET     /getUsers                   controllers.ApplicationController.getUsers

GET     /users                      controllers.ApplicationController.listUsers

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Catch all other requests and show a 404
GET     /$path<.*>                  controllers.ApplicationController.notFound404(path)