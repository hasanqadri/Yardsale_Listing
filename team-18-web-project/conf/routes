# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.ApplicationController.home
GET     /about                      controllers.ApplicationController.about
GET     /login                      controllers.ApplicationController.login
POST    /login                      controllers.ApplicationController.login
GET     /logout                     controllers.ApplicationController.logout
GET     /NewContact                 controllers.ApplicationController.newContact
POST    /NewContact                 controllers.ApplicationController.postContact
GET     /users                      controllers.ApplicationController.users
GET     /profile                    controllers.ApplicationController.profile
POST    /profile                    controllers.ApplicationController.profile
GET     /getUsers                   controllers.ApplicationController.getUsers
GET     /register                   controllers.ApplicationController.register
POST    /register                   controllers.ApplicationController.register
GET     /sale                       controllers.ApplicationController.sale
GET     /admin                      controllers.ApplicationController.admin

# Map requests to /image
GET     /image/*id                  controllers.ApplicationController.getImage(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Catch all other requests and show a 404
GET     /$path<.*>                  controllers.ApplicationController.notFound404(path)